{
    "version": 2,
    "builds": [
        {
            "src": "src/index.js",
            "use": "@vercel/node",
            "config": {
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "src/index.js"
        },
        {
            "src": "/(.*)",
            "headers": {
                "cache-control": "public, max-age=0, must-revalidate"
            },
            "dest": "client/build/$1"
        }
    ]
}